<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="190dp"
    android:layout_height="190dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/i_v_local_image_best_celler"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:id="@+id/l_l_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/i_v_local_image_best_celler">

            <TextView
                android:id="@+id/t_v_current_price_best_celler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/white"
                android:padding="2dp"
                android:text="100$"
                android:textColor="@color/black"
                android:textSize="16px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/t_v_old_price_best_celler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/white"
                android:padding="2dp"
                android:text="100$"
                android:textColor="@color/black"
                android:textSize="10px" />

            <ImageView
                android:id="@+id/i_v_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="100dp"
                android:src="@drawable/ic_favorite_white" />
        </LinearLayout>

        <TextView
            android:id="@+id/t_v_local_title_best_celler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="2dp"
            android:text="Sumsung"
            android:textColor="@color/black"
            android:textSize="10px"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/l_l_pricel_l_price" />
    </LinearLayout>
</androidx.cardview.widget.CardView>